page {
  height: 100%;
  background-color: #fff;
}
.popup{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.titleClass {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 60rpx;
}

.box {
  display: flex;
  justify-content: flex-start;
  margin-right: 30rpx;
}

.icon {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
  background-color: rgb(241, 242, 244);
  color: rgb(192, 193, 195);
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.imgBox {
  position: relative;
}

.img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #aaa;
}

.titleLabel {
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}

.state-note {
  transform: translateY(-50rpx);
  color: #aaa;
  margin-bottom: 60rpx;
}

.label-icon {
  color: rgb(211, 210, 216);
  margin-right: 10rpx;
}

.gray-note {
  color: #aaa;
  margin-left: 20rpx;
}

.customClass {
  display: flex;
  align-items: center;
  height: 80rpx;
  margin: 20rpx 0;
}

.c-value {
  display: flex;
  justify-content: flex-end;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}