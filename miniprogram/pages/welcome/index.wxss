page {
  height: 100%;
}

.container {
  position: relative;
  width: 100%;
  height: 100%;
}

.img {
  width: 100%;
  height: 100%;
}

.btn {
  position: absolute;
  bottom: 200rpx;
  width: 70%;
  margin: 0 auto;
  background-color: #008c8c;
  color: antiquewhite;
  border-radius: 20rpx;
  z-index: 99;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.3);
  z-index: 5;
}