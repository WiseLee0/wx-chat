page {
  background-color: #fff;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0 30rpx;
}

.box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 40rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 15rpx;
  position: relative;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.online {
  margin-left: 20rpx;
  font-size: 32rpx;
  position: relative;
}

.online::after {
  content: "";
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  position: absolute;
  background-color: rgb(7, 217, 105);
  right: -5rpx;
  bottom: 5rpx;
}

.level {
  margin-left: 20rpx;
  font-size: 32rpx;
  position: relative;
}

.level::after {
  content: "";
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  position: absolute;
  background-color: rgb(229, 153, 44);
  right: -5rpx;
  bottom: 5rpx;
}

.tag {
  content: '';
  display: inline-block;
  position: absolute;
  right: -15rpx;
  top: 40rpx;
  width: 30rpx;
  height: 30rpx;
  background-color: rgb(252, 99, 100);
  border-radius: 50%;
  border: 5rpx solid #eee;
}

.titleLabel {
  margin: 30rpx 0 20rpx 30rpx;
  display: flex;
  align-items: center;
}

.titleClass {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 60rpx;
}