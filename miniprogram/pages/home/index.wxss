.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.title {
  font-size: 48rpx;
  font-weight: bolder;
  position: absolute;
  left: 40rpx;
  top: 80rpx;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 100rpx 0 50rpx 0;
  overflow: hidden;
}

.func {
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.fun {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 49%;
}

.fun>view {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.divider {
  width: 2rpx;
  height: 90rpx;
  background-color: #aaa;
}

.iconfont {
  font-size: 100rpx;
}

.font-gray {
  color: #aaa;
  font-size: 24rpx;
}

.font-blod {
  color: #333;
  font-weight: bold;
}

.bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}

.set-cell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  margin-top: 40rpx;
}

.set-left {
  display: flex;
  flex-direction: column;
  padding-right: 40rpx;
}

.set-left text:nth-child(1) {
  margin-bottom: 15rpx;
  font-size: 32rpx;
  font-weight: 700;
}
.set-left text:nth-child(2) {
  font-size: 26rpx;
  color: #aaa;
}